.white
  color white
.white-pure
  color white-pure
.white-shade
  color white-shade

.light-grey
  color light-grey
.light-grey-shade
  color light-grey-shade
.grey
  color grey
.grey-shade
  color grey-shade
.dark-grey
  color dark-grey
.dark-grey-shade
  color dark-grey-shade

.blue
  color blue
.blue-shade
  color blue-shade

.red
  color red
.red-shade
  color red-shade

.green
  color green
.green-shade
  color green-shade

.yellow
  color yellow
.yellow-shade
  color yellow-shade

// background classes
.bg-black
  background black

.bg-white
  background white
.bg-white-pure
  background white-pure
.bg-white-shade
  background white-shade

.bg-light-grey
  background light-grey
.bg-light-grey-shade
  background light-grey-shade
.bg-grey
  background grey
.bg-grey-shade
  background grey-shade
.bg-dark-grey
  background dark-grey
.bg-dark-grey-shade
  background dark-grey-shade

.bg-blue
  background blue
.bg-blue-shade
  background blue-shade

.bg-red
  background red
.bg-red-shade
  background red-shade

.bg-green
  background green
.bg-green-shade
  background green-shade

.bg-yellow
  background yellow
.bg-yellow-shade
  background yellow-shade










// Demo divs
.color-swatches
  text-align center
.color-swatches > div
  width 100px;
  height 100px
  display inline-block
  margin 0 -2px -3px -2px




@media all and (max-width: 500px)
  body
    width 100%
    font-size 1.5em
    overflow-x hidden
  textarea
    min-width 80%

  nav
    width 100%
    div
      position absolute
      top 20px
      right 5%

    div:before
      content "menu"

    ul
      position relative
      top 75px
      width 100%

    li
      list-style none
      display inline-block
      background green
      width 100%
      height 75px
      &:hover
        background white-shade

  button
    width 90%
    margin 1% 5%
    font-size 1em

  .content
    overflow-x hidden

  .box
    overflow-x hidden
  .box > div
    padding 1%
    border-radius 2px
  .box-50
    width 100%
    margin-left 0
    margin-bottom 1%

  .box-center
    width 90%
    margin-left 5%


